@page "/dashboard"

<div class="container py-4">
    <h1 class="mb-4 text-primary">Dashboard</h1>

    <div class="row g-4">
        <!-- Clients -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="icon bg-primary text-white rounded-circle p-3 me-3" style="font-size: 1.8rem;">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">Clients</h5>
                        <h2 class="mb-0">125</h2>
                        <small class="text-muted">Total registered clients</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payments -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="icon bg-success text-white rounded-circle p-3 me-3" style="font-size: 1.8rem;">
                        <i class="bi bi-currency-dollar"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">Payments</h5>
                        <h2 class="mb-0">$78,940</h2>
                        <small class="text-muted">Total payments received</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment Interests -->
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="icon bg-warning text-white rounded-circle p-3 me-3" style="font-size: 1.8rem;">
                        <i class="bi bi-clock-history"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">Payment Interests</h5>
                        <h2 class="mb-0">45</h2>
                        <small class="text-muted">Active interests accrued</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Payment Interests -->
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="icon bg-danger text-white rounded-circle p-3 me-3" style="font-size: 1.8rem;">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">Pending Payment Interests</h5>
                        <h2 class="mb-0">12</h2>
                        <small class="text-muted">Interests pending approval</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Properties -->
        <div class="col-12 col-md-6 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                    <div class="icon bg-info text-white rounded-circle p-3 me-3" style="font-size: 1.8rem;">
                        <i class="bi bi-building"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-1">Properties</h5>
                        <h2 class="mb-0">33</h2>
                        <small class="text-muted">Available properties</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style type="text/css">
    .icon {
        width: 56px;
        height: 56px;
        display: flex;
        justify-content: center;
        align-items: center;
    }</style>


